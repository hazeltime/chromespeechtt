{
  "manifest_version": 3,
  "name": "Speech to Text for ChatGPT",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "commands": {
    "start-speech-to-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Start/Stop speech to text"
    }
  }
}