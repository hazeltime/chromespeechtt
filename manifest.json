{
  "manifest_version": 3,
  "name": "Speech to Text for ChatGPT",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "64": "icon64.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "commands": {
    "start-speech-to-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Start/Stop speech to text"
    }
  }
}